<body>

<%= flash[:notice] %>
<%= flash[:alert] %>

  <div class="FormWrapper">
    <section class="FormContainer">

      <h2>新規登録</h2>

        <%= form_with(model: @room, local: true) do |f| %>


            <div class="update-content">
            <div class="row">
                <%= f.label :room_name,"施設名" %>
                <%= f.text_field :room_name,placeholder:"ルーム名を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :introduction,"施設詳細" %>
                <%= f.text_field :introduction,placeholder:"施設詳細を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                    <%= f.label :price,"料金" %>
                    <%= f.text_field :price,placeholder:"一日あたりの料金を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :address,"住所" %>
                <%= f.text_field :address,placeholder:"住所を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :image,"施設画像" %>
                <%= f.file_field :image %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.submit "保存" %>
            </div>
            </div>

        <% end %>
        <a class="btn RoomsForm__button RoomsForm__button--cancel" href="http://127.0.0.1:3000">キャンセル</a>

    </section>
  </div>
</body>


