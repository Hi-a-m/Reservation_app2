<div class="FormWrapper">
  <section class="FormContainer">
    <h2>施設情報の編集</h2>



        <%= form_with model: @room do |f| %>
        <table>
            <div class="update-content">
            <div class="row">
              <%= f.label :room_name,"施設名" %>
              <%= f.text_field :room_name,placeholder:"ルーム名を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
              <%= f.label :introduction,"施設詳細" %>
              <%= f.text_field :introduction,placeholder:"施設詳細を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :price,"料金" %>
                <%= f.number_field :price,placeholder:"一日あたりの料金を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :address,"住所" %>
                <%= f.text_field :address,placeholder:"住所を入力" %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.label :image,"施設画像" %>
                <%= f.file_field :image %>
            </div>
            </div>

            <div class="update-content">
            <div class="row">
                <%= f.submit "保存" %>
            </div>
            </div>
        <% end %>
        </table>
  </section>
</div>